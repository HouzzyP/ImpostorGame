# Configuración del Servidor
PORT=4000
NODE_ENV=development

# Seguridad
# En producción, usar el dominio real (ej: https://elimpostor.com)
ALLOWED_ORIGINS=http://localhost:4000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 
RATE_LIMIT_MAX=100

# Database (opcional - para estadísticas persistentes)
# PostgreSQL/Supabase connection string
# Formato: postgresql://username:password@host:port/database
DATABASE_URL=

# Admin Panel Authentication
# Credenciales para acceder al panel de administración en /admin
ADMIN_USER=algo
ADMIN_PASS=algo
